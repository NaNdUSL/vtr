<?xml version="1.0" ?>
<project name="Cloth" width="900" height="900">
		
	<assets>
		<attributes>
			<attribute type="COLOR" name="width" data="INT" value="10" />
			<attribute type="COLOR" name="height" data="INT" value="10" />
			<attribute type="COLOR" name="stiffness" data="FLOAT" value="100.0" />
			<attribute type="COLOR" name="damping_coeff" data="FLOAT" value="10.0" />
		</attributes>
		<scenes>
			<scene name="Cloth">
				<SCALE x="0.2" y="0.2" z ="0.2" />
				<file name="objects/cloth.obj"/>
			</scene>
			<scene name="Axis">
				<geometry name = "axis" type = "AXIS"  >
					<SCALE x="5" y="5" z ="5" />
				</geometry>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport" >
				<!-- <SIZE width="1280" height= "1024" /> -->
				<CLEAR_COLOR r="0.4" b = "0.2" g = "0.1" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="main" >
				<viewport name="MainViewport" />
				<POSITION x="1.4" y="0.5" z="1.4" />
				<LOOK_AT_POINT x="0" y="0" z="0" />
				<FOV value="70"/>
				<NEAR value="0.01" />
			</camera>

			<camera name="side" >
				<viewport name="MainViewport" />
				<POSITION x="0.402" y="0.774" z="0" />
				<LOOK_AT_POINT x="0" y="0" z="0" />
				<FOV value="100"/>
				<NEAR value="0.01" />
			</camera>
		</cameras>

		<lights>
			<light name="sun" >
				<DIRECTION x="-5" y="-5" z = "-5" />
			</light>
			
			<light name="lamp" >
				<POSITION x="0" y="2" z = "0" />
				<SPOT_DIRECTION x="0" y="-1" z="0" />
				<SPOT_CUTOFF value="0.8" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="cloth.mlib" />
		</materialLibs>
	</assets>
	<pipelines>
		<pipeline name="cloth" >
			<pass name="cloth" class="default">
				<scenes>
					<scene name="Cloth" />
				</scenes>
				<camera name="main" />
				<lights>
					<light name="sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="cloth" toLibrary="cloth" />
				</materialMaps>
			</pass>
			<pass name="drawForces" class="default">
				<COLOR_CLEAR value="false" />
				<DEPTH_CLEAR value="false" />
				<scenes>
					<scene name="Cloth" />
				</scenes>
				<camera name="main" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="drawForces" toLibrary="cloth" />
				</materialMaps>
			</pass>
			<pass name="axis" class="default">
				<COLOR_CLEAR value="false" />
				<DEPTH_CLEAR value="false" />
				<scenes>
					<scene name="Axis" />
				</scenes>
				<camera name="main" />
			</pass>
		</pipeline>
		
	</pipelines>
		
	<interface>
		<window label="Main Window">
			<var label="stiffness" type="COLOR" context="cloth::cloth" component="stiffness" def="min=1 max=100 step=10"/>
			<var label="damping_coeff" type="COLOR" context="cloth::cloth" component="damping_coeff" def="min=1 max=100 step=10"/>
		</window>
		
	</interface>
</project>