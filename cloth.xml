<?xml version="1.0" ?>
<project name="Cloth" >

    <assets>

		<scenes>
			<scene name="Cloth" param="UNITIZE">
				<file name="cloth.obj"/>
			</scene>
		</scenes>        
        
        <viewports>
            <viewport name="MainViewport" >
                <CLEAR_COLOR r="0" b = "0" g = "0" />
            </viewport>
        </viewports>

        <cameras>
            <camera name="main" >
                <viewport name="MainViewport" />
                <POSITION x="0.402" y="0.974" z="1.341" />
                <LOOK_AT_POINT x="0" y="0" z="0" />
                <NEAR value="0.0001" />
            </camera>
        </cameras>

        <lights>
            <light name="sun" >
                <DIRECTION x="-5" y="-5" z = "-5" />
            </light>

            <light name="lamp" >
                <POSITION x="0" y="2" z = "0" />
                <SPOT_DIRECTION x="0" y="-1" z="0" />
                <SPOT_CUTOFF value="0.8" />
            </light>

        </lights>
    
        <materialLibs>
            <materialLib filename="cloth.mlib" />
        </materialLibs>
    </assets>

    <pipelines>
        <pipeline name="cloth" >
            <pass name="lighting" class="default" >
                <scenes>
                    <scene name="Cloth" />
                </scenes>
                <camera name="main" />
                <lights>
                    <light name="sun" />
                </lights>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial ="lighting" fromLibrary="cloth" />
                    </map>
                </injectionMaps>
            </pass>

            <pass name="draw normals" class="default">
				<COLOR_CLEAR value="false" />
				<DEPTH_CLEAR value="false" />
				<scenes>
					<scene name="Cloth" />
				</scenes>
				<camera name="main" />
				<lights>
					<light name="sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial="cloth" fromLibrary="cloth" />
					</map>
				</injectionMaps>
			</pass>
        </pipeline>

    </pipelines>

    <!-- <interface>
        <window label="Toon Effect">
            <pipelineList label="Mode" />
        </window> 
    </interface> -->
</project>